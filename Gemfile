# frozen_string_literal: true

source "https://rubygems.org"

# Jekyll static site generator
gem 'jekyll', '~> 4.4', '>= 4.4.1'

# Required for Ruby 3.0+ (webserver for local development)
gem 'webrick', '~> 1.8'

# Optional: common plugins
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
end